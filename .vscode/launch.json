  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch test",
      "type": "node",
      "request": "launch",
      "env": {
        "NODE_ENV": "test"
      },
      "runtimeArgs": [
        "--nolazy"
      ],
      "args": [
        "--colors",
        "--config=${workspaceFolder}/jest.config.js",
        "--runInBand",
        "--coverage"
      ],
      "program": "${workspaceFolder}/node_modules/jest/bin/jest",
      "outputCapture": "std",
      "internalConsoleOptions": "openOnSessionStart"
    },
  ]
}